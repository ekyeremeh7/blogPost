<%- include("partials/header");-%>
    <h1>Compose</h1>
    <form action="/compose" method="POST">
        <div class="form-group">
            <label for="title">Title</label><br>
            <input type="text" class="form-control" aria-describedby="titleHelp" placeholder="" name="postTitle" width="20px"><br>
            <small id="titleHelp" class="form-text text-muted">Title of your post goes Here.</small>
        </div>

        <div class="form-group">
            <label for="post">Post</label><br>
            <textarea rows="5%" cols="130%" name="postBody" aria-describedby="postHelp"></textarea><br>
            <small id="postHelp" class="form-text text-muted">The Post Goes Here.</small>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>

    <%- include("partials/footer");-%>